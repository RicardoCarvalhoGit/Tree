generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model cadastro_empresa {
  id           Int     @id @default(autoincrement()) 
  nome_emp     String  @db.VarChar(255)             
  CNPJ_emp     String  @unique                      
  email_emp    String  @unique                     
  contato_emp  String  @db.VarChar(50)             
  endereco_emp String? @db.Text                     
  senha_emp    String  @db.VarChar(255)             
}

model cadastro_cliente {
  id       Int     @id @default(autoincrement())    
  nome     String  @db.VarChar(255)               
  cpf      String  @unique                        
  email    String  @unique                         
  telefone String? @db.VarChar(50)                 
  senha    String  @db.VarChar(255)                
}
